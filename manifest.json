{
  "name": "Nexus Notifier Extension",
  "version": "1.1",
  "manifest_version": 2,
  "description": "Nexus availability notification",
  "browser_action": {
    "default_icon": "img/nexus_icone.png",
    "default_popup": "nexus.html"
  },

  "content_scripts": [
    {
      "matches": ["http://*/*"]
    }
  ],

  "permissions": [
    "http://*/*", "https://*/*", 
    "tabs"
  ]
}